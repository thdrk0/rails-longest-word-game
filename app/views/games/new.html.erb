<h1>New Game</h1>
<div class="d-flex p-2">
<% @letters.each do |letter| %>
  <h2 class= "border p-2 m-2 bg-info"><%= letter.capitalize %></h2>
<% end %>
</div>
<form class="form-inline" action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input id="letters" name="token" type="hidden" value= <%=@letters%> >
  <h5>What is the longest word you can find?</h4>
  <input type="text" name="the_word">
  <button type="submit" class="btn btn-secondary mb-2">My Word!</button>
</form>
